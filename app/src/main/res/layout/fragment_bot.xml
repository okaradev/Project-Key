<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/llblue"

    tools:context=".MainActivity">
    <LinearLayout
    android:layout_marginTop="20dp"

        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/marqueeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome to Kelucky bot!!."
            android:textSize="29sp"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:scrollHorizontally="true"
            android:freezesText="true"
            android:textColor="@color/yelo" />
    <TextView
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Account:07xxxxxx"
        android:textStyle="italic"
        android:id="@+id/accnm"
        android:textSize="21dp"

        android:textColor="@color/white"/>

    />
    <androidx.cardview.widget.CardView
        android:layout_margin="12dp"
        app:cardCornerRadius="21dp"
        android:background="@color/yelo"
        app:cardElevation="21dp"




        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="12dp"

            android:gravity="center"
            android:orientation="horizontal"
            android:background="@color/lblue"

            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:textSize="21dp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select game:"

                />
            <EditText
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textColorHint="@color/white"
                android:hint="select game"
                android:id="@+id/selectgame"



                android:background="@color/lblue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_margin="12dp"
        app:cardCornerRadius="21dp"
        android:background="@color/yelo"
        app:cardElevation="21dp"




        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="12dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@color/lblue"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:textSize="21dp"

                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select amount:"

                />
            <EditText
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColorHint="@color/white"
                android:hint="select game"
                android:id="@+id/selectgameamnt"
                android:background="@color/lblue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="21dp"
        android:background="@color/yelo"
        app:cardElevation="21dp"
        android:layout_margin="12dp"



        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="12dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@color/lblue"

            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:textSize="21dp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select time:"

                />
            <EditText
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColorHint="@color/white"
                android:hint="select time"
                android:id="@+id/selectgamet"
                android:background="@color/lblue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_margin="12dp"
        app:cardCornerRadius="21dp"
        android:background="@color/yelo"
        app:cardElevation="21dp"




        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="12dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@color/lblue"

            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:textSize="21dp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Amount per round:"

                />
            <EditText
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColorHint="@color/white"
                android:hint="amount"
                android:textColor="@color/white"
                android:id="@+id/selectgamett"
                android:background="@color/lblue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />


        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toCont"
        android:text="Run..."
        android:textSize="25sp"
        android:layout_marginTop="22dp"
        android:layout_margin="8dp"

        />




    </LinearLayout>



</ScrollView>